<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of the progress bar (empty section) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#e0e0e0"/> <!-- Background color when not filled -->
            <corners android:radius="15dp"/>  <!-- Rounded corners for background -->
        </shape>
    </item>

    <!-- Progress of the progress bar (filled section) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/blogb"/> <!-- Progress color -->
                <corners android:radius="15dp"/>  <!-- Rounded corners for progress -->
            </shape>
        </clip>
    </item>

</layer-list>